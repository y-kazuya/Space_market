
.site-main
  .site-main__title-logo
    = image_tag 'http://www.dreamnews.jp/?action_Image=1&p=0000092185&id=headimage'
  .h1.top-information
    = "#{Room.where(activated: "certification").where(public: true).distinct.count}件のレンタルスペースから 目的に合ったスペースをかんたん予約"
  .top-menu-container
    .container
      %ul.row
        %li.top-menu-list
          = link_to search_path(event_type: 1) ,class: 'top-menu-list__button' do
            = image_tag 'party.png',class: 'top-menu-list__button-img'
            %span.top-menu-list__button-text
              パーティ
              %span.top-menu-list__button-num
                = set_event_type_count(1)
                件
        %li.top-menu-list
          = link_to search_path(event_type: 2) ,class: 'top-menu-list__button' do
            = image_tag 'meeting.png',class: 'top-menu-list__button-img'
            %span.top-menu-list__button-text
              会議
              %span.top-menu-list__button-num
                = set_event_type_count(2)
                件
        %li.top-menu-list
          = link_to "#" ,class: 'top-menu-list__button' do
            = image_tag 'bed.png',class: 'top-menu-list__button-img'
            %span.top-menu-list__button-text
              民泊
              %span.top-menu-list__button-num
                5000000
                件
    .container
      %ul.row
        %li.top-menu-list.row-list
          = link_to search_path(event_type: 3 ) ,class: 'top-menu-list__button' do
            = image_tag 'camera.png',class: 'top-menu-list__button-img'
            %span.top-menu-list__button-text
              写真撮影
              %span.top-menu-list__button-num
                = set_event_type_count(3)
                件
        %li.top-menu-list.row-list
          = link_to search_path(event_type: 4 ) ,class: 'top-menu-list__button' do
            = image_tag 'moovie.png',class: 'top-menu-list__button-img'
            %span.top-menu-list__button-text
              ロケ撮影
              %span.top-menu-list__button-num
                = set_event_type_count(4)
                件
        %li.top-menu-list.row-list
          = link_to search_path(event_type: 8 ) ,class: 'top-menu-list__button' do
            = image_tag 'run.png',class: 'top-menu-list__button-img'
            %span.top-menu-list__button-text
              スポーツ
              %span.top-menu-list__button-num
                = set_event_type_count(8)
                件
        %li.top-menu-list.row-list
          = link_to "#" ,class: 'top-menu-list__button' do
            = image_tag '3dot.png',class: 'top-menu-list__button-img'
            %span.top-menu-list__button-text
              その他
              %span.top-menu-list__button-num
                %br

    .top-menu__other-search
      %h3.top-menu__other-title
        カテゴリーから探す
      %ul.top-flow__list
        %li
          = link_to "#" ,class: 'link-light-blue hover-border' do
            エリア
        %li
          = link_to "#" ,class: 'link-light-blue hover-border' do
            人数
        %li
          = link_to "#" ,class: 'link-light-blue hover-border' do
            会場タイプ
        %li
          = link_to "#" ,class: 'link-light-blue hover-border' do
            アメニティ

